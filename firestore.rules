
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check if user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'mdmahbubsite@gmail.com';
    }
    
    // Helper to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isAdmin() || isOwner(userId);
    }

    match /cards/{cardId} {
      allow read, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create, update: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);
    }

    match /documents/{docId} {
      allow read, delete: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create, update: if isAdmin() || (request.auth != null && request.resource.data.userId == request.auth.uid);
    }

    match /verificationRequests/{reqId} {
      allow read, write: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create: if request.auth != null;
    }
    
    match /deletionRequests/{reqId} {
      allow read, write: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow create: if request.auth != null;
    }

    match /feedback/{feedbackId} {
      allow read, write: if isAdmin();
      allow create: if request.auth != null;
    }
    
    match /systemConfig/{configId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /cardDesigns/{designId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /notifications/{notifId} {
      // Allow admins to read everything, users to read their own and global
      allow read: if isAdmin() || (request.auth != null && (resource.data.userId == request.auth.uid || resource.data.userId == 'global'));
      
      // Allow authenticated users to create notifications (to trigger admin alerts)
      allow create: if request.auth != null;
      
      // Allow users to mark their own notifications as read
      allow update: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // Only admins can delete notifications
      allow delete: if isAdmin();
    }
  }
}
